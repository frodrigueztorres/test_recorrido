<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @alert.name %>
</p>

<p>
  <strong>City origin:</strong>
  <%= @alert.city_origin_name %>
</p>

<p>
  <strong>City destination:</strong>
  <%= @alert.city_destination_name %>
</p>

<p>
  <strong>Bus class:</strong>
  <%= @alert.bus_class %>
</p>

<p>
  <strong>Price:</strong>
  <%= @alert.price %>
</p>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Schedule</th>
      <th>Class</th>
      <th>Minimum price</th>
      <th>Enterprise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @search_results.each do |search_result| %>
      <tr data-link="<%= "https://demo.recorrido.cl/es/bus/#{@alert.city_origin_url_name}/#{@alert.city_destination_url_name}/#{l(search_result[:departure_time].to_date)}" %>">
        <td><%= l(search_result[:departure_time].to_date) %></td>
        <td><%= l(search_result[:departure_time].to_time, format: :only_time) %></td>
        <td><%= search_result[:seat_klass] %></td>
        <td><%= search_result[:price] %></td>
        <td><%= search_result[:bus_operator_name] %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_alert_path(@alert) %> |
<%= link_to 'Back', alerts_path %>

<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>
