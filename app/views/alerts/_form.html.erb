
<%= simple_form_for(@alert) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :city_origin, collection: @cities, include_blank: false %>
    <%= f.input :city_destination, collection: @cities, include_blank: false %>
    <%= f.input :bus_class, collection: Alert.bus_classes.keys, include_blank: false %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
